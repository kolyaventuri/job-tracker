
<h1>  <%= @job.title %> at <%= @job.company.name %> </h1>

Description: <%= @job.description %>
<br>

Level of Interest: <%= @job.level_of_interest %>
<br>

City: <%= @job.city %>
<br>

Company: <%= link_to @job.company.name, company_path(@job.company) %><br>
<%= form_for [@comment] do |f| %>
<%= f.label :comment %>
<%= f.text_field :comment %>
<%= f.hidden_field :job_id, value: @job.id %>

<%= f.submit %>
<% end %>


<% @comments.each do |comment| %>
  <ul><%= comment.comment %></ul>
<% end %>


<%= link_to "Edit", edit_company_job_path(@job.company) %>
<%= link_to "Delete", company_job_path(@job.company), method: "delete" %>
