<div class="container">
    <div class="row my-4">
      <div class="col-lg-8">
        <img class="img-fluid rounded" src="https://preview.ibb.co/ce8TX7/jonathan_riley_118591_unsplash.jpg"height="20px" width="100%" alt="">
      </div>
      <div class="col-lg-4">
        <div id="edit-box" class="col-md-4 mb-4">
          <div class="card h-100">
            <h2>Edit <%= @job.title %> below!</h2>
            <div id="card-bod" class="card-body">


             <% if @company != nil %>
              <%= form_for [@company, @job] do |f| %>

             <%= f.label :company %>
             <%= f.collection_select(:company_id, Company.all, :id, :name) %><br><br>

                <%= f.label :category %>
                <%= f.collection_select(:category_id, Category.all, :id, :name) %><br><br>

                <%= f.label :title %>
                <%= f.text_field :title %><br><br>

                <%= f.label :description %>
                <%= f.text_field :description %><br><br>

                <%= f.label :level_of_interest %>
                <%= f.number_field :level_of_interest %><br><br>

                <%= f.label :city %>
                <%= f.text_field :city %><br><br>

                <%= f.submit("Update") %>
              <% end %>
                   <% end %>

                                <% if @company == nil %>
                                 <%= form_for @job do |f| %>


                                   <%= f.label :category %>
                                   <%= f.collection_select(:category_id, Category.all, :id, :name) %><br><br>

                                   <%= f.label :title %>
                                   <%= f.text_field :title %><br><br>

                                   <%= f.label :description %>
                                   <%= f.text_field :description %><br><br>

                                   <%= f.label :level_of_interest %>
                                   <%= f.number_field :level_of_interest %><br><br>

                                   <%= f.label :city %>
                                   <%= f.text_field :city %><br><br>

                                   <%= f.submit("Update") %>
                                 <% end %>
                                      <% end %>


                  </div>
                </div>
              </div>


      </div>
    </div>
    <div id="header" class="card text-white bg-secondary my-4 text-center">
      <div class="card-body">
      </div>
    </div>