<h1><%= @company.name %></h1>

<%= render partial: 'contacts/form', locals: { company: @company, contact: Contact.new } %>

<h2>Contacts</h2>
<table class="table contacts">
  <tbody>
    <% @contacts.find_each do |contact| %>
      <tr class="list-group-item">
        <td>
          <%= link_to '<i class="far fa-edit"></i>', edit_company_contact_path(@company, contact), id: "edit_#{contact.id}" %>
          <%= link_to '<i class="far fa-trash-alt"></i>', company_contact_path(@company, contact), id: "delete_#{contact.id}", method: 'delete' %>
        </td>
        <td>
          <p><%= contact.name %></p>
        </td>
        <td>
          <p><%= contact.role %></p>
        </td>
        <td>
          <p><%= mail_to contact.email %></p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
